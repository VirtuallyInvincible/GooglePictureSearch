<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <EditText
        android:id="@+id/clearable_edit_text_text_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="30dip"
        android:paddingStart="0dip"
        android:hint="@string/activity_main_search_box_hint"
        android:inputType="text"
        android:gravity="center_vertical"
        />
    <ImageButton
        android:id="@+id/clearable_edit_text_clear_button"
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/btn_clear"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:contentDescription="@string/loading_prompt"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:scaleType="fitCenter"
        />

</RelativeLayout>